@Library('mylib') _

pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                script {
                    cloneRepo('https://github.com/opstree/spring3hibernate.git', 'java7')
                }
            }
        }
        
        stage('codecoverage') {
            steps {
                script {
                    runCodeCoverageCheck()
                }
            }
        }
        
         stage('dependency check') {
            steps {
                script {
                    runDependencyCheck()
                }
            }
        }
        
        
        stage('Cred Check') {
            steps {
                script {
                    runCredCheck()
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    runMavenTests()
                }
            }
        }
        
        
        
    }
}
